# x402 Payment Configuration
PAY_TO_ADDRESS=0xYourWalletAddress
X402_NETWORK=base  # 'base' for mainnet, 'base-sepolia' for testnet

# CDP API Credentials (required for mainnet)
# Get from https://portal.cdp.coinbase.com/
CDP_API_KEY_ID=your_api_key_id
CDP_API_KEY_SECRET=your_api_key_secret
CDP_WALLET_SECRET=your_wallet_secret

# Pricing (in USD)
POSTER_PRICE=0.75

# Application Settings
DATA_DIR=/data/posters
CLEANUP_HOURS=24
PORT=8000

# Optional
LOG_LEVEL=INFO
NODE_ENV=production

# Frontend (embedded at build time via `npm run build`)
VITE_WALLETCONNECT_PROJECT_ID=your_project_id  # Get from https://cloud.reown.com
